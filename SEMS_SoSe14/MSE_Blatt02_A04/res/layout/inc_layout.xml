<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCount"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/txtCount"
        android:text="@string/inc_count" />

    <Button
        android:id="@+id/btnSwitchInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnInc"
        android:layout_alignBottom="@+id/btnInc"
        android:layout_toRightOf="@+id/txtCount"
        android:text="@string/Wechsel" />

</RelativeLayout>