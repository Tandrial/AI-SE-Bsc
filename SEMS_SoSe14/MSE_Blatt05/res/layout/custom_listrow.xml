<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/framelayout_listrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/imageView_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

        <ProgressBar
            android:id="@+id/progressBar_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView_listrow_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/framelayout_listrow"
        android:ellipsize="end"
        android:lines="1"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView_listrow_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/framelayout_listrow"
        android:layout_alignLeft="@+id/textView_listrow_title"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:text="TextView" />

</RelativeLayout>